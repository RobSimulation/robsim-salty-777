{
  "name": "masterrob94-salty-777",
  "version": "2.3.0",
  "description": "An open source modification for Captain Sim B777 and B767 Series based on Salty-747 project. This project is aiming to improve missing functionality as much as possible",
  "edition": "development",
  "main": "",
  "scripts": {
    "lint": "eslint --cache **/*.{js,mjs,jsx,ts,tsx}",
    "lint-fix": "npm run lint -- --fix",
    "test": "jest",
    "prettier": "prettier --write **/*.json **/*.yml src/instruments/**/*.css",
    "build:layout": "node scripts/build.js",
    "build:instruments": "rollup -c src/instruments/rollup.config.js",
    "build:pfd": "rollup -c src/instruments/src/PFD/rollup.config.js",
    "build:msfs-sdk": "cd msfs-avionics-mirror/src/sdk && npm i && npm run build",
    "build": "npm run build:msfs-sdk && npm run build:pfd && npm run build:instruments && npm run build:layout",
    "dev": "rollup -wc src/instruments/rollup.config.js",
    "dev-pfd": "rollup -wc src/instruments/src/PFD/rollup.config.js"
  },
  "lint-staged": {
    "*.{js,mjs,jsx}": "eslint --cache --fix",
    "*.{json,yml,css,scss}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobSimulation/robsim-salty-777.git"
  },
  "author": "RobSimulation",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/RobSimulation/robsim-salty-777/issues"
  },
  "homepage": "https://github.com/RobSimulation/robsim-salty-777#readme",
  "dependencies": {
    "byte-data": "^19.0.1",
    "fs-extra": "^10.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.54.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@flybywiresim/fragmenter": "^0.6.1",
    "@flybywiresim/rollup-plugin-msfs": "^0.3.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-image": "^2.1.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "eslint": "^8.20.0",
    "msfssdk": "file:msfs-avionics-mirror/src/sdk/build",
    "rollup": "^2.77.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-import-css": "^3.0.3",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-ts-paths-resolve": "^1.7.1",
    "rollup-plugin-typescript2": "^0.32.1",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4"
  }
}
